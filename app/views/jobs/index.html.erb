<h1> Listing all jobs </h1>

<table>
  <tr>
    <th>Username</th>
    <th>Title</th>
    <th>Description</th>
    <th>Date Posted</th>
    <th>Reocurring</th>
    <th>Work Date</th>
    <th>Response Deadline</th>
    <th>Hourly Pay</th>
    <th>Created At</th>
    <th>Updated At</th>
  </tr>

  <% @jobs.each do |job| %>
    <tr>
      <td><%= job.username %></td>
      <td><%= job.title %></td>
      <td><%= job.description %></td>
      <td><%= job.date_posted %></td>
      <td><%= job.reocurring %></td>
      <td><%= job.work_date %></td>
      <td><%= job.response_deadline %></td>
      <td><%= job.hourly_pay %></td>
      <td><%= job.created_at %></td>
      <td><%= job.updated_at %></td>
    </tr>
  <% end %>
</table>
