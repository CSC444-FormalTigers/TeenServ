<h1> Listing all users </h1>

<table>
  <tr>
    <th>Username</th>
    <th>Email</th>
  </tr>
 
  <% @user.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= link_to 'Show', user_path(user) %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Destroy', user_path(user),
              method: :delete,
	      data: { confirm: 'Are you sure?' }%></td>
    </tr>
  <% end %>
</table>
