<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=yes" />
  <title>TeenServ</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Lato' %>
</head>
<body>
  <header>
    <div class="container">
      <%= link_to root_path, id: "logo" do %><h1>TeenServ</h1><% end %>
      <div id="dropdown_container">
        <%= fa_icon "bars", id: "menu_toggle"%>
        <ul id="nav">
          <div id="language_container">
            <li>
              <%= link_to '#' do %>
              <label for="language_toggle"><%= fa_icon "bars"%>Language</label>
              <% end %>
            </li>
            <input type="checkbox" id="language_toggle">
            <div class="dropdown_menu">
              <%= content_tag :li do %>
                <%= link_to locale: :en_CA do %>
                  <%=flag_icon :ca%>English
                <%end%>
                <%= link_to locale: :fr_CA do %>
                  <%=flag_icon :ca%>Français
                <%end%>
                <%= link_to locale: :zh_CN do %>
                  <%=flag_icon :cn%>简体中文
                <%end%>
                <%= link_to locale: :zh_TW do %>
                  <%=flag_icon :cn%>國語
                <%end%>
                <%= link_to locale: :ja do %>
                  <%=flag_icon :jp%>日本語
                <%end%>
              <% end %>
            </div>
          </div>
          <% if signed_in? %>
          <li>
            <%= link_to jobs_path do %>
            <%= fa_icon "briefcase"%>Jobs
            <% end %>
          </li>
          <li>
            <%= link_to users_path do %>
            <%= fa_icon "group"%>Users
            <% end %>
          </li>
          <li>
            <%= link_to user_path(current_user) do %>
            <%= fa_icon "user" %>My Profile
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, :method => :delete do %>
            <%= fa_icon "sign-out"%>Logout
            <% end %>
          </li>

          <% else %>
          <li>
            <%= link_to new_user_session_path do%>
            <%= fa_icon "sign-in"%>Login
            <% end %>
          </li>
          <li>
            <%= link_to new_user_registration_path do %>
            <%= fa_icon "user-plus"%>Register
            <% end %>
          </li>
          <% end %>

        </ul>
      </div>
    </div>
  </header>
  <div id="notifications">
    <% flash.each do |key, value| %>
      <%= content_tag :div, value, class: "flash #{key}" %>
    <% end %>
  </div>

  <section class="container" id="main_content">
    <%= yield %>
  </section>
</body>
<%= render "layouts/footer" %>
</html>
